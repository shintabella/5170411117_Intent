<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints">

        <TextView
                android:id="@+id/welcome"
                android:text="WELCOME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:paddingTop="30dp"
                android:textColor="#F56898"
                android:gravity="center"
                android:layout_marginTop="10dp" android:fontFamily="@font/ewert"/>

        <TextView
                android:id="@+id/logo"
                android:text="Universitas Teknologi Yogyakarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#0524CC"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp" android:fontFamily="@font/macondo_swash_caps"/>

        <ImageView
                android:id="@+id/gambar"
                android:layout_width="400dp"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/logo"/>

        <TextView
                android:id="@+id/data"
                android:text="Silahkan isi Data Mahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#0528EC" android:fontFamily="@font/delius_swash_caps"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"></LinearLayout>

        <EditText
                android:id="@+id/Nama"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/edittext_design"
                android:ems="20"
                android:hint="Masukan Nama  :"
                android:inputType="textPersonName" android:fontFamily="@font/chicle"/>

        <EditText
                android:id="@+id/nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFFFF"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/edittext_design"
                android:ems="20"
                android:hint="Masukan NPM   :"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#B3B3B3" android:fontFamily="@font/chicle"/>/>


        <EditText
                android:id="@+id/nilai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/edittext_design"
                android:ems="20"
                android:hint="Masukan Nilai    :"
                android:inputType="number"
                android:textColorHint="#A3A0A0" android:fontFamily="@font/chicle"/>


        <Button
                android:id="@+id/btn_back"
                android:text="PROSES DATA"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:textColor="#0425DD"
                android:background="@drawable/bottom" android:fontFamily="@font/macondo_swash_caps"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>